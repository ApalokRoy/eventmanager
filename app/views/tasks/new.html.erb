<% provide(:title, 'Add Task') %>
<%= link_to 'Back', event_tasks_path(@event), class: "btn btn-lg btn-primary", id: "button1" %>
<br>
<h1>New Task</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@task, url: event_tasks_path) do |f| %>
      <%= render 'shared/error_tasks' %>
      <br>
      <%= f.label :name, 'Task Name' %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.label :user_id, 'Assign to' %>
      <%= f.collection_select :user_id, User.all, :id, :name, prompt: 'Select User' %>
      <br>
      <%= f.label :"Estimated Date & Time" %>
      <%= f.text_field :deadline, class: 'form-control datetimepicker' %>
      <br>
      <%= f.submit "Create Task", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<br>


<script type="text/javascript">

   $(function(){
     $('.datetimepicker').datetimepicker({format: 'YYYY/MM/DD hh:mm A'});
});
 
</script>
