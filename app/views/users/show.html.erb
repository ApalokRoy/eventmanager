<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-8">
    <section class="user_info">
      <h1>
        User Name: <%= @user.name %> <br><br>
        Registered Mailing Address: <%= @user.email %> <br><br>
      </h1>
      <% if @tasks.count > 0  %>
        <h1> <%= pluralize(@tasks.count, "task") %>  <%= @tasks.count >  1 ? "are" : "is" %> assigned to You :</h1>
        <br>
        <table>
          <tr>
            <td><h4> Task Name &nbsp;&nbsp;&nbsp;</h4></td>
            <td><h4> Event Name &nbsp;&nbsp;&nbsp; </h4></td>
            <td><h4> Deadline &nbsp;&nbsp;&nbsp; </h4></td>
            <td><h4> Status  &nbsp;&nbsp;&nbsp; </h4></td>
            <td> </td>
          </tr>
          <% @tasks.each do |task| %>
            <% eventid = task.event_id %>
            <tr>
              <td><h4><strong> <%= task.name  %> &nbsp;&nbsp;&nbsp;&nbsp;</strong></h4></td>
              <td> <%= task.event.name  %> &nbsp;&nbsp;&nbsp;&nbsp; </td>
              <td> <%= task.deadline.strftime("%A, %B %d , %Y at %I:%M %p")  %> &nbsp;&nbsp;&nbsp;&nbsp; </td>
              <td> <%= task.completed? ? "Completed" : "Pending" %>  &nbsp;&nbsp;&nbsp;&nbsp;</td>
              <td> <%= link_to "Click To View Task" , event_task_path(eventid, task) %> </td>
            </tr>
          <% end %>
        </table>
      <% else %>
        <h1> <%= "No tasks assigned" %> </h1>
      <% end %>
    </section>
  </aside>
</div>
