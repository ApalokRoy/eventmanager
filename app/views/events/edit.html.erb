<% provide(:title, "Edit Event") %>
<%= link_to 'Back', events_path, class: "btn btn-lg btn-primary", id: "button1"  %>
<br>
<h1>Update Selected Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_events' %>
      <br>
      <%= f.label :name, 'Event Name' %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.submit "Update Event", class: "btn btn-primary" %>    
    <% end %>
  </div>
</div>
<br>

