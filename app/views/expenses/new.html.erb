<% provide(:title, 'Add Expense') %>
<%= link_to 'Back', event_task_expenses_path(@event, @task), class: "btn btn-lg btn-primary", id: "button1" %>
<br>
<h1>New Expense</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@expense, url: event_task_expenses_path) do |f| %>
      <%= render 'shared/error_expenses' %>
      <br>
      <%= f.label :name, "Expense Name" %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.label :"Charges (in Rupees) " %>
      <%= f.text_field :cost, class: 'form-control' %>
      <br>
      <%= f.submit "Create Expense", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<br>

