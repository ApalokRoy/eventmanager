<% provide(:title, 'Sign up') %>
<%=link_to 'Back', root_path, class: "btn btn-lg btn-primary", id: "button1" %>
<br>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_users' %>

      <%= f.label :name , 'Enter Name' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email , 'Enter E-Mail Address' %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password , 'Enter Password' %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, 'Retype Password' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>	
  </div>
</div>
